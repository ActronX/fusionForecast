# Admin credentials for the InfluxDB Web UI (http://localhost:8086)
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your-secure-password-here
INFLUXDB_ORG=fusionforecast
INFLUXDB_INIT_BUCKET=default

# Station Configuration
# ------------------------------------------------------------------
# Coordinates used for weather data fetching (Open-Meteo)
STATION_LATITUDE=52.5200
STATION_LONGITUDE=13.4050

# Panel Orientation:
# TILT: Angle from horizontal (0 = flat on ground, 90 = vertical wall)
# AZIMUTH: 0 = South, -90 = East, 90 = West, 180 = North
STATION_TILT=30
STATION_AZIMUTH=0

# Model Configuration
# ------------------------------------------------------------------
# Days: How many days of history should be used for training? (e.g. 30, 60, 365)
MODEL_TRAINING_DAYS=30

# Max Power (Watts): Physical limit of your inverter/panels to clip outliers.
MAX_POWER_CLIP=6000

# Night Threshold (Watts): Values below this are treated as "night" (0) during finding matches.
NIGHT_THRESHOLD=50
